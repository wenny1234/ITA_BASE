<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration>
<configuration>
    <property name="loggingDir" value="C:/CIRIUS/log/" />
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- 日単位でファイル切り替え -->
            <FileNamePattern>${loggingDir}apl_%d{yyyyMMdd}.log</FileNamePattern>
            <!-- カレントを含め７世代保存 -->
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder>
            <!-- 出力ファイルの文字コード -->
            <charset>UTF-8</charset>
<!--             <pattern>%d{yyyy-MMM-dd HH:mm:ss.SSS}_%.-1level[%thread][%logger{20}][%msg]%n -->
            <pattern>%d{yyyy-MMM-dd HH:mm:ss.SSS}_%.-1level[%thread][%logger][%msg]%n
            </pattern>
        </encoder>
    </appender>
    <logger name="jp.co.tokyo_gas.cirius" level="DEBUG"/>
    <logger name="sql" level="DEBUG"/>
    <logger name="weld.util" level="DEBUG"/>
    <logger name="jp.co.tokyo_gas.cisfw.interceptor" level="DEBUG"/>
    
<!--      <root level="INFO">   -->
<!--      <root level="DEBUG">   -->
    <root level="INFO">
        <appender-ref ref="FILE"/>
